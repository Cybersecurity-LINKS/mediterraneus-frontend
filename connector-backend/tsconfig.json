{
  "compilerOptions": {
      "lib": ["es2019", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "target": "es2019",
      "module": "commonjs",
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "outDir": "dist/src",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
  },
  "include": ["src/**/*"]
}